load_module modules/ngx_http_opentracing_module.so; # Load OpenTracing module.

user  www-data;

error_log /var/log/nginx/error.log warn;
pid       /run/nginx.pid;

worker_processes auto;

events {
    worker_connections  1024;
    multi_accept off;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    server_names_hash_bucket_size 64;
    ssl_session_cache  shared:SSL:10m;
    ssl_session_timeout 10m;
    client_max_body_size 64m;

    opentracing off; # By default don't trace requests.
    opentracing_trace_locations off; # Emit only one span per request.
    # Load the Datadog tracing implementation, and the given config file.
    opentracing_load_tracer /usr/local/lib/libdd_opentracing_plugin.so /etc/nginx/dd-config.json;

    # Trick to get time_iso8601 but with milliseconds accuracy (https://thatsamguy.com/nginx-iso8601-time-format)
    map $time_iso8601 $datetime { ~([^+]+) $1; }
    map $time_iso8601 $timezone { ~\+([0-9:]+)$ $1; }
    map $msec $datetime_ms { ~\.([0-9]+)$ $1; }

    log_format default '$datetime.$datetime_ms+$timezone $remote_addr:$remote_port $request_method $scheme://$host$request_uri $server_protocol $status $request_length $bytes_sent $request_time $http_referer "$http_user_agent" $opentracing_context_x_datadog_trace_id';
    access_log /var/log/nginx/access.log default buffer=8k flush=15s;

    sendfile    on;
    tcp_nopush  on;
    tcp_nodelay on;

    keepalive_timeout  65;
    keepalive_requests 100;

    # Remove Nginx version from response header
    server_tokens off;

    # Redirect HTTP to HTTPS
    server {
        listen 80;
        return 301 https://$host$request_uri;
    }

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
